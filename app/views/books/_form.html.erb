<%= form_with model: book, local: true do |form| %>
  <% if book.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Existen <%= pluralize(book.errors.count, "errores") %></p>
    <ul>
      <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control', id: :book_title %>
  </div>
  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, class: 'form-control', id: :book_author %>
  </div>
  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, Book.statuses.keys, {}, {class: "form-control"} %>
  </div>
  <div class="actions">
    <%= form.submit 'Agregar Libro', class: 'btn btn-primary' %>
  </div>
<% end %>